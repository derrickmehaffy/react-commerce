{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve",
      "isolatedModules": true,
      "paths": {
         "@config/*": ["config/*"],
         "@assets/*": ["assets/*"],
         "@lib/*": ["lib/*"],
         "@helpers/*": ["helpers/*"],
         "@models/*": ["models/*"],
         "@components/*": ["components/*"],
         "testUtils": ["./test/utils/testUtils"]
      },
      "types": ["cypress", "@testing-library/cypress"]
   },
   "exclude": ["node_modules", ".next", "out"],
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "@types/index.d.ts",
      "./test/jest-setup.ts"
   ]
}
