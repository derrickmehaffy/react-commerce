{
   "name": "@ifixit/react-commerce",
   "author": "Massimo",
   "license": "UNLICENSED",
   "version": "1.0.0",
   "repository": {
      "url": "https://github.com/iFixit/react-commerce"
   },
   "scripts": {
      "dev": "next dev",
      "build": "next build",
      "start": "next start",
      "type-check": "tsc --pretty --noEmit",
      "format": "prettier --write .",
      "lint": "eslint . --ext ts --ext tsx --ext js",
      "test": "jest",
      "test-all": "npm run lint && npm run type-check && npm run test",
      "cypress:open": "cypress open",
      "cypress:run": "cypress run",
      "transform-svg": "npx @svgr/cli --typescript -d assets/svg assets/svg/files && prettier --write assets/svg"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged",
         "pre-push": "npm run type-check"
      }
   },
   "lint-staged": {
      "*.@(ts|tsx)": [
         "npm run lint",
         "npm run format"
      ]
   },
   "dependencies": {
      "@chakra-ui/react": "1.6.3",
      "@emotion/react": "11.1.5",
      "@emotion/styled": "11.3.0",
      "@ifixit/react-components": "0.2.5",
      "algoliasearch": "4.9.1",
      "framer-motion": "4.1.11",
      "immer": "9.0.2",
      "memoize-one": "5.2.1",
      "next": "11.0.1",
      "react": "17.0.2",
      "react-dom": "17.0.2",
      "react-icons": "4.2.0",
      "react-virtualized-auto-sizer": "1.0.5",
      "react-window": "1.8.6"
   },
   "devDependencies": {
      "@svgr/cli": "5.5.0",
      "@testing-library/cypress": "7.0.6",
      "@testing-library/jest-dom": "5.13.0",
      "@testing-library/react": "11.2.5",
      "@testing-library/user-event": "13.1.9",
      "@types/jest": "26.0.20",
      "@types/node": "14.14.25",
      "@types/react": "17.0.1",
      "@types/react-virtualized-auto-sizer": "1.0.1",
      "@types/react-window": "1.8.4",
      "@types/shopify-buy": "2.10.5",
      "@typescript-eslint/eslint-plugin": "4.14.2",
      "@typescript-eslint/parser": "4.14.2",
      "babel-jest": "26.6.3",
      "cypress": "7.5.0",
      "eslint": "7.19.0",
      "eslint-config-next": "^11.0.1",
      "eslint-config-prettier": "7.2.0",
      "eslint-plugin-cypress": "2.11.3",
      "eslint-plugin-react": "7.19.0",
      "eslint-plugin-react-hooks": "4.2.0",
      "husky": "4.2.3",
      "identity-obj-proxy": "3.0.0",
      "jest": "26.6.3",
      "jest-watch-typeahead": "0.6.1",
      "lint-staged": "10.0.10",
      "prettier": "2.2.1",
      "typescript": "4.3.2"
   }
}
