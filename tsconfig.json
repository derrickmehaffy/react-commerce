{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "paths": {
         "@config/*": ["config/*"],
         "@assets/*": ["assets/*"],
         "@libs/*": ["libs/*"],
         "@layouts/*": ["layouts/*"],
         "@features/*": ["features/*"],
         "@components/*": ["components/*"]
      }
   },
   "exclude": ["node_modules", ".next", "out"],
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "@types/index.d.ts"
   ]
}
